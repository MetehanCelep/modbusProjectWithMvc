<form method="post" action="/Modbus/Last">
    <div class="form-floating mb-3">
        <input class="form-control" id="IpAdress" name="IpAdress" placeholder="Ip Adresi Giriniz">
        <label for="IpAdress">Ip Adress</label>
    </div>
    <div class="form-floating mb-3">
        <input class="form-control" id="Port" name="Port" placeholder="Port Numarası Giriniz">
        <label for="Port">Port</label>
    </div>
    <div class="form-floating mb-3">
        <input class="form-control" id="Second" name="Second" placeholder="Saniye Giriniz">
        <label for="Second">Saniye</label>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Modbus" asp-action="Last">Veri Çekmek İçin Tıklayınız</button>
</form>
